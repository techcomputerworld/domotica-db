@model DataPaginador<InputModelRegistrar>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list = Model.List;
    
}

<div class="container-fluid">
    <section class="Usuarios">
        <div class="row">
            <div class="col-12">
                <h1> Usuarios </h1>
                

            </div>
            <div class="row">
                
                <div class="col-12 col-sm-3">
                    <a asp-area="Usuarios" asp-page="/Registrar/Registrar" class="btn btn-primary">Registrar</a>
                </div>
                
            </div>
         </div>
            <div class="row mt-4">
                <div class="col-12">
                    <table class="tabla">
                        <thead>
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.Input.Imagen)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Input.Email)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Input.Role)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in list)
                            {
                                var imagen = item.Imagen;
                            <tr>
                                <td>    
                                    <img class="img-fluid" src="~/images/fotos/@imagen" alt="" />
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role)
                                </td>
                                <td>
                                    <a asp-area="Usuarios" asp-page="/Editar/Editar" asp-route-id="@item.Email" class="btn btn-success">Editar</a> |
                                    <a asp-area="Usuarios" asp-page="/Eliminar/Eliminar" asp-route-id="@item.Email" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        Resultados @Html.Raw(Model.Pagi_info)
                        <br />
                        @Html.Raw(Model.Pagi_navegacion)
                    </div>
                </div>
            </div>
            
        
        <div class="col-12">

        </div>
    </section>
</div>
    



